# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Java sources
*.java text diff=java
*.kt text diff=kotlin
*.groovy text diff=java
*.scala text diff=java

# Build files
*.gradle text diff=java
*.gradle.kts text diff=kotlin
gradlew text eol=lf
*.bat text eol=crlf
pom.xml text diff=html
build.xml text
*.properties text
*.xml text diff=html

